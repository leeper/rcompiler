#!/bin/csh 
# @configure_input@
setenv PATH @RCC_BIN_PATH@:${PATH}
foreach f ( $* ) 
	echo --- $f ---                                    
	echo compiling with rcc...
	rcc $f -o ./`basename $f .r`.c && \
	echo compiling with rcc-cc...
	rcc-cc -o ./`basename $f .r` -g ./`basename $f .r`.c  && \
	echo running with rcc-run...
	rcc-run ./`basename $f .r`
end
