#!/bin/bash 
# @configure_input@
export PATH=@RCC_BIN_PATH@:${PATH}
export LOUD=true
if [[ "$1" == "-q" ]] ; then
    export LOUD=false
    shift
fi
for f in $* ; do 
    echo --- $f --- &&
    if $LOUD ; then echo compiling with rcc... ; fi &&
    rcc $f -o ./`basename $f .r`.c &&
    if $LOUD ; then echo compiling with rcc-cc... ; fi &&
    rcc-cc -O2 -o ./`basename $f .r` -g ./`basename $f .r`.c &&
    if $LOUD ; then echo running with rcc-run... ; fi &&
    rcc-run ./`basename $f .r`
done
